                      </button>
                    </form>
                  </div>
                  <% if (locals.userName === posts[i].author) {%>
                    <form action="/edit/<%= posts[i].id %>" method="post">
                        <input id="updatebtn" type="submit" value ="update" name="btn">
                        <input id="deletebtn" type="submit" value="delete" name="btn">
                    </form>
                    <% } %>
                  <div>
                    <p id="rightPRRow" class="rightPRow"> '<%= posts[i].author %>'</p>
                    <p id="rightPLRow"class="rightPRow">Published by:&nbsp;</p>
                  </div>
                </div>
                  
                </div> 
              <% } %>
          <% } else {%>
            <a href="/new">
              <div class="box">
                <h1 id="create">Create new post</h1>
              </div>
            </a>
            <% } %>
      </div>
    </main>
    <script src="script/script.js"></script>
    <%- include("partials/footer.ejs") %>