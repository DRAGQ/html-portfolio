<%- include("partials/header.ejs") %>
    <title>Login</title>
</head>
<body class="loginBody">
    <div class="logContainer">
        <h1 class="logH1">Log in to Blog</h1>
            <form class="logAuthBox" method="get">
                <button class="loginButton" formaction="/oauth2/redirect/google">
                    <img class="imgLogo" src="./pictures/googleLogo.png" alt="Google logo">
                    <p>Continue with Google</p>
                </button>
                <button class="loginButton" formaction="/oauth2/redirect/facebook">
                    <img class="imgLogo" src="./pictures/facebookLogo.png" alt="Facebook logo">
                    <p>Continue with Facebook</p>
                </button>
                <button class="loginButton" formaction="/oauth1/redirect/twitter">
                    <svg class="imgLogo" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-twitter-x" viewBox="0 0 16 16">
                        <path d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865z"/>
                    </svg>
                    <p>Continue with X</p>
                </button>
            </form>
        <hr>
        <form class="logAuthBox" id="logAuthBox" action="/login" method="post">
            <label>Email</label>
            <input placeholder="Email" name="username" type="email" minlength="8" required>
            <div id = "errMsgDiv">
                <p id = "errMsg"><% if (locals.errMsg) { %><%= errMsg %><% } %></p>
                <button id="registerButton" class="formButton" type="button">Register</button>
            </div>
            <label>Password</label>
            <input placeholder="Password" name="password" type="password" minlength="8" required>
            <label class="confirmPassword">Confirm password</label>
            <input class="confirmPassword" placeholder="Confirm password" name="confirm" type="password" minlength="8">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" name="remember_me" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Remember me</label>
            </div>
            <button class="loginButton" id="submitButton" type="submit">Log In</button>
        </form>
        <hr>
        <div id="signUpToggleDiv" class="sendUsertoRegisterPage"> Don't have an account ? <button id="signUpToggleButton" class="formButton" type="button">Sign up for Blog</button></div>
    </div>
    <script src="script/scriptLogin.js"></script>
    <%- include("partials/footer.ejs") %>